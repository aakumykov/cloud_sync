<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/syncLogStateIconView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:contentDescription="@string/description_sync_log_operation_state_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_sync_log_success" />

    <TextView
        android:id="@+id/syncLogOperationNameView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="4dp"
        android:paddingStart="12dp"
        android:paddingEnd="8dp"
        android:textColor="@color/sync_log_message_color"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/syncLogStateIconView"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Название операции" />

    <TextView
        android:id="@+id/syncLogNameView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="12dp"
        android:paddingEnd="8dp"
        android:paddingBottom="4dp"
        android:textColor="@color/sync_log_file_name_color"
        android:textStyle="italic"
        app:layout_constraintStart_toEndOf="@+id/syncLogStateIconView"
        app:layout_constraintTop_toBottomOf="@+id/syncLogOperationNameView"
        app:layout_constraintEnd_toStartOf="@id/syncOperationCancelButton"
        android:singleLine="true"
        android:ellipsize="end"
        tools:text="имя объекта" />

    <TextView
        android:id="@+id/syncLogSizeView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/syncLogOperationNameView"
        app:layout_constraintEnd_toStartOf="@id/syncOperationCancelButton"
        app:layout_constraintBottom_toBottomOf="@id/syncLogOperationNameView"
        app:layout_constraintTop_toTopOf="@id/syncLogOperationNameView"
        android:textAlignment="textStart"
        android:layout_marginEnd="12dp"
        tools:text="50%" />

    <ImageView
        android:id="@+id/syncOperationCancelButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:contentDescription="@string/description_sync_operation_cancel_button"
        android:src="@drawable/ic_sync_log_operation_cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="4dp"
        android:layout_marginEnd="4dp"
        android:visibility="invisible"
        tools:visibility="visible"
        />

    <ProgressBar
        android:id="@+id/syncLogProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/syncLogNameView"
        android:visibility="invisible"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>