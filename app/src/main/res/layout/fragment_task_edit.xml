<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/sourcePathInput"
            android:hint="@string/hint_source_path_input"
            android:importantForAutofill="no"
            style="@style/path_input" />

        <Button
            android:id="@+id/selectSourcePathButton"
            style="@style/path_select_button" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/targetPathInput"
            style="@style/path_input"
            android:hint="@string/hint_target_path_input"
            android:importantForAutofill="no" />

        <Button
            android:id="@+id/selectTargetPathButton"
            style="@style/path_select_button"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sync_task_period_label"
        android:textAlignment="center"
        android:textColor="@color/primaryVariant" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/periodHoursView"
            style="@style/sync_task_period_input"
            android:textAlignment="textEnd"
            android:layout_marginEnd="8dp"
            android:hint="@string/hint_sync_task_period_hours"
            android:importantForAutofill="no" />

        <EditText
            android:id="@+id/periodMinutesView"
            style="@style/sync_task_period_input"
            android:textAlignment="textStart"
            android:layout_marginStart="8dp"
            android:hint="@string/hint_sync_task_period_minutes"
            android:importantForAutofill="no" />

    </LinearLayout>

    <Button
        android:id="@+id/saveButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/BUTTON_task_edit_save" />

    <Button
        android:id="@+id/cancelButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="?attr/colorButtonNormal"
        android:text="@string/BUTTON_task_edit_cancel" />

    <TextView
        android:id="@+id/progressMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:textAlignment="center"
        android:textSize="16sp"
        android:visibility="gone"
        android:textColor="@color/secondaryVariant"
        tools:visibility="visible"
        tools:text="Сообщение об операции" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/errorMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:textAlignment="center"
        android:textSize="16sp"
        android:visibility="gone"
        android:textColor="@color/design_default_color_error"
        tools:visibility="visible"
        tools:text="Сообщение об ошибке" />

</LinearLayout>